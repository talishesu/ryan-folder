@model List<Works>
@{
    ViewData["Title"] = "Index";
}

<!--
				Card - Works
			-->
			<div class="card-inner animated active" id="works-card">
				<div class="card-wrap">

					<!--
						Works
					-->
					<div class="content works">

						<!-- title -->
						<div class="title">Recent Works</div>@*

						<!-- filters -->
						<div class="filter-menu filter-button-group">
							<div class="f_btn active">
								<label><input type="radio" name="fl_radio" value="grid-item" />All</label>
							</div>
							<div class="f_btn">
								<label><input type="radio" name="fl_radio" value="photo" />Image</label>
							</div>
							<div class="f_btn">
								<label><input type="radio" name="fl_radio" value="gallery" />Gallery</label>
							</div>
							<div class="f_btn">
								<label><input type="radio" name="fl_radio" value="video" />Video</label>
							</div>
							<div class="f_btn">
								<label><input type="radio" name="fl_radio" value="music" />Music</label>
							</div>
							<div class="f_btn">
								<label><input type="radio" name="fl_radio" value="design" />Content</label>
							</div>
						</div>*@

						<!-- content -->
						<div class="row grid-items border-line-v">
							@foreach (var item in Model)
						   {
							   <!-- work item design -->
							<div class="col col-d-6 col-t-6 col-m-12 grid-item design border-line-h">
								<div class="box-item">
									<div class="image">
										<a href="#popup-2" class="has-popup-media">
											<img src="~/images/works/@item.ImagePath" alt="" />
											<span class="info">
												<span class="ion ion-images"></span>
											</span>
										</a>
									</div>
									<div class="desc">
										<a href="#popup-2" class="name has-popup-media">@item.Name</a>
										<div class="category">@item.Type</div>
									</div>
									<div id="popup-2" class="popup-box mfp-fade mfp-hide">
										<div class="content">
											<div class="image">
												<img src="~/images/works/@item.ImagePath" alt="">
											</div>
											<div class="desc">
												<div class="post-box">
													<h1>@item.Head</h1>						
													<div class="blog-detail">@item.Type</div>
													<div class="blog-content">
														<p>
															@item.Title
														</p>
													</div>
													<a href="@item.Url" target="_blank" class="button">
														<span class="text">View Project</span>
														<span class="arrow"></span>
													</a>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						   }

							<div class="clear"></div>
						</div>

					</div>

				</div>
			</div>