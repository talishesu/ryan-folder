@model BlogViewModel
@{
    ViewData["Title"] = "Detail";
}

<!--
				Card - Blog
			-->
			<div class="card-inner blog  animated active" id="blog-card">
				<div class="card-wrap">

					<!-- Blog -->
					<div class="content blog">

						<!-- title -->
						<div class="title">
							<span >Blog</span>
						</div>

						<!-- content -->
						<div class="row border-line-v">
								<!-- blog item -->
								<div class="col col-d-12 col-t-12 col-m-12">
									<div class="box-item">
										<div class="image">
												<img src="~/images/blog/@Model.Blog.ImagePath" alt="By spite about do of allow" />
												<span class="info">
													<span class="ion ion-document-text"></span>
												</span>
										</div>
										<div class="desc">
											<a>
												<span class="date">@Model.Blog.CreatedDate</span>
											</a>
											<a  class="name">@Model.Blog.Head</a>
											<div class="text">
												<p>@Model.Blog.Title</p>
											</div>
										</div>
										<div class="desc">
											@foreach (var item in Model.BlogComment)
										   {
											   <a  class="name">@item.FullName</a>
											<div class="text">
												<p>@item.CreatedDate</p>
												<p>@item.Comment</p>
											</div>
										   }
										</div>
									</div>
								</div>
								<div style="padding:0;margin-left:240px">
									<form method="post">
												<input asp-for="SimpleComment.BlogId" type="text" value="@Model.Blog.Id" style="display:none" class="form-control">
										<div class="form-group row">
											<label asp-for="SimpleComment.FullName" class="col-sm-2 col-form-label">
											</label>
											<div class="col-sm-10">
												<input asp-for="SimpleComment.FullName" type="text" class="form-control">
											</div>
										</div>
										<div class="form-group row">
											<label asp-for="SimpleComment.Comment" class="col-sm-2 col-form-label">
											</label>
											<div class="col-sm-10">
												<input asp-for="SimpleComment.Comment" type="text" class="form-control">
											</div>
										</div>
										<button asp-action="Create" type="submit" class="btn btn-out btn-success btn-square">
											Comment
										</button>
									</form>
								</div>
							<div class="clear"></div>
						</div>
					</div>
				</div>
			</div>
