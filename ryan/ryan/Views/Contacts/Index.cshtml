@model ContactViewModel
@{
    ViewData["Title"] = "Index";
}

<!--
				Card - Contacts
			-->
			<div class="card-inner contacts animated active" id="contacts-card">
				<div class="card-wrap">

					<!--
						Conacts Info
					-->
					<div class="content contacts">

						<!-- title -->
						<div class="title">Get in Touch</div>

						<!-- content -->
						<div class="row">
							<div class="col col-d-12 col-t-12 col-m-12 border-line-v">
								<div class="map" id="map"></div>
								<div class="info-list">
									<ul>
										<li><strong>Address . . . . .</strong> @Model.Contact.Address</li>
										<li><strong>Email . . . . .</strong>@Model.Contact.Email</li>
										<li><strong>Phone . . . . .</strong> @Model.Contact.Phone</li>
										<li><strong>Freelance . . . . .</strong> @Model.Contact.Freelance</li>
									</ul>
								</div>
							</div>
							<div class="clear"></div>
						</div>

					</div>

					<!--
						Contact Form
					-->
					<div class="content contacts">

						<!-- title -->
						<div class="title">Contact Form</div>

						<!-- content -->
						<div class="row">
							<div class="col col-d-12 col-t-12 col-m-12 border-line-v">
								<div class="contact_form">
									<form  method="post">
										<div class="row">
											<div class="col col-d-6 col-t-6 col-m-12">
												<div class="group-val">
													<input asp-for="ContactForm.FullName" type="text" name="name" placeholder="Full Name" />
												</div>
											</div>
											<div class="col col-d-6 col-t-6 col-m-12">
												<div class="group-val">
													<input asp-for="ContactForm.Email" type="text" name="email" placeholder="Email Address" />
												</div>
											</div>
											<div class="col col-d-12 col-t-12 col-m-12">
												<div class="group-val">
													<textarea asp-for="ContactForm.Message" name="message" placeholder="Your Message"></textarea>
												</div>
											</div>
										</div>
										<div class="align-left">
											<button asp-action="Create" type="submit" class="btn btn-out btn-success btn-square">
											Message
											</button>
										</div>
									</form>
								</div>
							</div>
							<div class="clear"></div>
						</div>

					</div>

				</div>
			</div>